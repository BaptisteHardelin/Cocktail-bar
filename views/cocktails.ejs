<%- include('./partials/header'); -%> <% item.forEach(element => {%>

<div class="card">
  <img
    src="<%= element.image %> "
    alt="cocktails"
    width="250px"
    height="375px"
  />
  <div class="container">
    <p><%= element.cocktailName %></p>
    <p><%= element.alcohol %></p>
    <% const ingredient = element.ingredient %> <% let array =
    ingredient.toString().split(';') %> <% array.forEach(element => {%>
    <ul>
      <li>- <%= element%></li>
    </ul>
    <%}); %>
  </div>
</div>
<%}); %> <%- include('./partials/footer'); -%>

<style>
  .card {
    display: inline-block;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    transition: 0.3s;
    width: 17%;
  }

  .card:hover {
    box-shadow: 0 8px 18px 0 rgba(0, 0, 0, 0.2);
  }

  .container {
    padding: 2px 18px;
  }
</style>
